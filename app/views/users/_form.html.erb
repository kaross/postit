<%= render 'shared/errors', obj: @user %>

<%= form_for(@user) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br />
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br />
  <%= f.label :timezone %>
  <%= f.time_zone_select :timezone, ActiveSupport::TimeZone.us_zones %>
  <br /> 
  <%= f.submit @user.new_record? ? "Register" : "Update Profile" %>
<% end %>