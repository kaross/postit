<h4>Login</h4>

<% if @error %>
  <div class="alert alert-error">
    <a class="close" data-dismiss="alert">&#215;</a>
    <%= content_tag :div, @error %>
  </div>
<% end %>

<%= form_tag '/login', method: 'post' do %>
  <%= label_tag :username %>
  <%= text_field_tag :username, params[:username] %>
  <br />
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br />
  <%= submit_tag 'login' %>
<% end %>